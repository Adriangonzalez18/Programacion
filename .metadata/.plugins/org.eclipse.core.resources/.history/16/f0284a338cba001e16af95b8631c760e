import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		
		String [] opciones = {"1) AÃ±adir Contacto", "2) Eliminar Contacto", "3) Existe Contacto","4) Mostrar toda la agenda"
				,"5) Buscar Contacto","6) Salir"};

		String op;
		do {
			op = mostrarMenu(opciones);
				
	
			if(op.equals("1")){
				
			}else if(op.equals("6")){
				System.out.println("Saliendo del programa. Buen dia.");
				
					}else {
				System.out.println("Introduzca un valor correcto del menu"+"\n");
					}

				}while(!op.equals("6"));

			
		
	}	
public static String mostrarMenu(String [] opciones)
{
	System.out.println("\nSeleccione la opcion deseada");
	System.out.println();
	Scanner reader = new Scanner(System.in);
	for(String opcion : opciones)
	{
		System.out.println(opcion);
	}
	
	return reader.nextLine();	
}
	
		

}
