import java.util.HashMap;
import java.util.Map;

public class Taller {
	
	private Map<String,Coche> coche = new HashMap<String,Coche>();
	String matricula;


	@Override
	public String toString() {
		return " \nCoches " + coche;
	}
	
	public void anadeElemento (String color,String marca, String maticula ) {
		
		if(coche.containsKey(maticula)) {
			System.out.println("La matrícula ya esta registrada");
		}
		
		else {
			coche.put(matricula , new Coche (color,marca ));
		}
	}
	
	public boolean eliminaelemento(String maticula) {
		
		boolean isRemoved = false;
		if(coche.containsKey(maticula)) {
			coche.remove(matricula);
			isRemoved = true;
		}
		
		else {
			
			System.out.println("La matrícula no existe");
		}
		
		return isRemoved;
	}
	
	public void VisualizarMatriculas() {
		System.out.println(coche.toString());
	}

}
