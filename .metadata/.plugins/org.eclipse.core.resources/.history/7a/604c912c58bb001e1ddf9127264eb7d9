import java.util.Collection;
import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Set;

public class Taller {
	
	private Map<String,Coche> coches = new HashMap<String,Coche>();
	String matricula;


	@Override
	public String toString() {
		return " \nmatricula " + matricula;
	}
	
	public void anadeElemento (String color,String marca, String maticula ) {
		
		if(coches.containsKey(maticula)) {
			System.out.println("La matrícula ya esta registrada");
		}
		
		else {
			coches.put(matricula , new Coche (color,marca));
		}
	}
	
	public boolean eliminaelemento(String maticula) {
		
		boolean isRemoved = false;
		if(coches.containsKey(maticula)) {
			coches.remove(coches, maticula);
			isRemoved = true;
		}
		
		else {
			
			System.out.println("La matrícula no existe");
		}
		
		return isRemoved;
	}
	
	public void VisualizarMatriculas() {
		Set<String> matricula = coches.keySet();
		
		for (String key : matricula) {
			System.out.println(coches.get(key));
			}
	}
	
	public void VisualizarCoches() {
		Collection<Coche> matricula = coches.values();
		
		for (Coche key : matricula) {
			System.out.println(key);
			}
	}

	public void visualizaTaller() {
		
		Set<String> matricula = coches.keySet();
		
	for (String key : matricula) {
		System.out.println(key + " - " + coches.get(key));
		}		
	
		
	}
}
